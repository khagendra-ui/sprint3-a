// Swap Items Modal
#swapModal.modal
  .modal-content
    h2 Available Swap Items
    table#swapTable(border="1")
      thead
        tr
          th Item Name
          th Category
          th Color
          th Condition
          th Description
          th Image 
          th Swapwith
      tbody
        each item in swapItems  // Loop through the data passed from the server
          tr
            td= item.itemName
            td= item.category
            td= item.color
            td= item.condition
            td= item.description
            td= item.swapwith
            td= 
            img(src=item.image alt='Item Image' width="100" height="100")  // Display image if available
            td= item.swapwith
    button#closeSwapModal.btn.red(type="button")